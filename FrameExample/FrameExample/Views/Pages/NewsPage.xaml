<Page x:Class="FrameExample.NewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrameExample"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewsPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Image x:Name="image" Height="180" Width="290" Source="/FrameExample;component/Images/logo.png"/>
            <Button x:Name="btnHeigth" FontSize="20" Content="Hide Image" Width="180" Height="32"
                    Click="btnHeigth_Click"/>
        </StackPanel>
    </Grid>
</Page>
